@page
@model BookList.CreateModel

<br/>
<h2 class="text-dark">新しい本を追加</h2>
<br/>

<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="form-grop row">
            <div class="col-4">
                <label asp-for ="Book.Id"></label>
            </div>
            <div class="col-6">
                <label asp-for="Book.Id" class="form-control" />
            </div>
        </div>
        <div class="form-grop row">
            <div class="col-4">
                <label asp-for="Book.Name">名前</label>
            </div>
            <div class="col-6">
                <label asp-for="Book.Name" class="form-control" />
            </div>
        </div>
        <div class="form-grop row">
            <div class="col-4">
                <label asp-for="Book.Author">筆者</label>
            </div>
            <div class="col-6">
                <label asp-for="Book.Author" class="form-control" />
            </div>
        </div>
        <div class="form-grop row">
            <div class="col-4">
                <label asp-for="Book.ISBN"></label>
            </div>
            <div class="col-6">
                <label asp-for="Book.ISBN" class="form-control" />
            </div>
        </div>
        <div class="form-grop row">
            <div class="col-3 offset-4">
                <input type="submit" value="Create" class="btn btn-primary form-control"/>
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">戻る</a> @*asp-page="Index"でIndexページに移動する*@
            </div>
        </div>
    </form>
</div>